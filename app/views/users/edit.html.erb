<div class="text-center">
  <h1>プロフィール変更</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3 mb-5">
    <%= form_with(model: @user, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :name, 'チーム名' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :area, '活動拠点（都道府県等）' %>
        <%= f.text_field :area, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :level, 'チームレベル（野球遍歴、大会実績等）' %>
        <%= f.text_field :level, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :memo, 'メモ' %>
        <%= f.text_field :memo, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :image, 'プロフィール画像' %>
        <div><%= f.file_field :image %></div>
      </div>
      <%= f.submit '変更', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>
